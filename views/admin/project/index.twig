{% set title = "Projects" %}
{% extends "admin/layout.twig" %}
{% block content %}
<p>List of your projects. Basically. <a href='{{ url.route('@admin.projects.get-create') }}' class='fa fa-plus'></a></p>
<div class="row">
  <div class='col-sm-6'>
    <div class='table-responsive'>
      <table class='table'>
        <tr>
          <th width="15px">No.</th>
          <th>Name</th>
          <td width="15px"></td>
        </tr>
        {% for project in projects %}
        <tr>
          <td><?php echo !isset($no) ? 1 : $no = $no + 1;?></td>
          <td><a href='{{ url.route('@admin.projects.project.get-update', {'project-id': project.id}) }}'>{{ project.name }}</a></td>
          <td><a href='{{ url.route('@admin.projects.project.get-delete', {'project-id': project.id}) }}' class='fa fa-times'></a></td>
        </tr>
        {% endfor %}
        {% if projects.count == 0 %}
        <tr>
          <td colspan="2" align="center">You've no project at all, bro.</td>
        </tr>
        {% endif %}
      </table>
    </div>
  </div>
</div>
{% endblock %}